#!/usr/bin/zsh

# Please do not edit this file. If you want to modify your system profile, create a new script in `/etc/profile.d`.

# System-wide environment variables and startup programs

# Used by graphical applications, such as Wayland
export XDG_DATA_DIRS=${XDG_DATA_DIRS:-/usr/share}
export XDG_CONFIG_DIRS=${XDG_CONFIG_DIRS:-/etc/xdg}
export XDG_RUNTIME_DIR=${XDG_RUNTIME_DIR:-~/.config}

# Set basic variables
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export PATH=/usr/bin
if [[ $UID -eq 0 ]]; then
	export PATH=$PATH:/usr/sbin
fi

for SCRIPT in /etc/profile.d/* ; do
	if [ -r $SCRIPT ] ; then
		. $SCRIPT
	fi
done

# Set shell prompt
if [[ $UID -eq 0 ]]; then # Root shell prompt
	PS1="\[\e[1;31m\]\h [ \[\e[1;34m\]\w \[\e[1;31m\]]# \[\e[0m\]"
elif [[ $UID -lt 1000 ]]; then # Special prompt for package-controlled user accounts. You shouldn't encounter this in normal cases, but it will signify if you are using a special account.
	PS1="\[\e[1;33m\]\u@\h [ \[\e[1;30m\]\w \[\e[1;33m\]]$ \[\e[0m\]"
else # User shell prompt
	PS1="\[\e[1;32m\]\u@\h [ \[\e[m\]\w \[\e[1;32m\]]$ \[\e[0m\]"
fi

alias e="exit" # Convenient alias for exiting the current shell
alias rot13="tr 'A-Za-z' 'N-ZA-Mn-za-m'"

# Set umask
if [ "$(id -gn)" = "$(id -un)" -a $EUID -gt 99 ]; then
	umask 002
else
	umask 022
fi

export HISTSIZE=1000

# Set dircolors
eval $(dircolors -b /etc/dircolors)
